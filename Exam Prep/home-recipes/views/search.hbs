        <section class="search-container">
            <h2>Search Recipes</h2>
            <form method="get" name="search-form">
                <input type="text" id="search" name="name" placeholder="Search for recipes..." {{#if name}}value="{{name}}"{{/if}}>
                <button type="submit">Search</button>
            </form>

            {{#if recipes}}
            <div class="search-results">
                {{#each recipes}}
                {{> recipe}}
                {{/each}}
            {{else}}
                <p class="no-post">There are no recipes found yet!</p>
            </div>
            {{/if}}
        </section>


        
